<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="hr_contract_form_hides_supp_allow" model="ir.ui.view">

            <field name="name">hr.contract.view.form.hides.supp.allo</field>

            <field name="model">hr.contract</field>

            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>

            <field name="arch" type="xml">

                <xpath expr="//group[@name='salary']" position="after">
                    <group>

                        <!--                        <label for="income_tax" string="Monthly Tax Slabs in Cash"/>-->
                        <field name="income_tax"/>
                    </group>
                </xpath>

            </field>

        </record>

        <record model="ir.ui.view" id="payroll_income_tax_slabs.list">
            <field name="name">payroll_income_tax_slabs list</field>
            <field name="model">payroll_income_tax_slabs.payroll_income_tax_slabs</field>
            <field name="arch" type="xml">
                <!--                <group string="Bank Accounts" position="before">-->


                <!--                        <field name="relation_field"/>-->
                <tree editable="top">
                    <!--                        <group string="Schedule">-->

                    <field name="yearly_start_limit"/>
                    <field name="yearly_end_limit"/>
                    <field name="deduction_type"/>
                    <field name="amount"/>
                    <!--                        </group>-->

                </tree>


                <!--                </group>-->
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="payroll_income_tax_slabs_action_window">
            <field name="name">payroll_income_tax_slabs window</field>
            <field name="res_model">payroll_income_tax_slabs.payroll_income_tax_slabs</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
                id="menu_config_salary_slabs"
                name="Tax Slabs"
                parent="hr.menu_human_resources_configuration"
                groups="hr.group_hr_user"
                sequence="101" action="payroll_income_tax_slabs_action_window"/>





