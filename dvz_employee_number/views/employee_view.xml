<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record for inheriting the employee form view to add a sequence field -->
    <record id="view_hr_employee_inherit_sequence" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.sequence</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Insert the sequence field before the existing title -->
            <xpath expr="//div[contains(@class, 'oe_title')]" position="before">
                <div class="oe_title" name="emp_seq_title">
                    <h1>
                        <!-- Display the employee sequence field -->
                        <field name="emp_seq" widget="char"/>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//div[contains(@class, 'o_kanban_record_title')]//field[@name='name']" position="before">

                        <field name="emp_seq"/><br/><br/>

            </xpath>
        </field>
    </record>

    <!-- Record for inheriting and modifying the employee tree view -->
    <record id="view_hr_employee_inherit_sequence_tree" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.sequence</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <!-- Add a new column for the sequence field -->
            <xpath expr="//tree//field[@name='name']" position="before">
                <field name="emp_seq"/>
            </xpath>

        </field>
    </record>

    <!-- Inherit the Kanban view for employees -->
    <record id="view_hr_employee_kanban_inherit" model="ir.ui.view">
        <field name="name">hr.employee.kanban.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/> <!-- Replace with actual ID -->
        <field name="arch" type="xml">
            <xpath expr="//strong[contains(@class, 'o_kanban_record_title')]//field[@name='name']" position="before">
                <div class="o_kanban_record_headings">
                    <strong class="o_kanban_record_title">
                        <!-- Add Employee Sequence field -->
                        <field name="emp_seq"/><br/><br/>

                    </strong>
                </div>
            </xpath>
            <xpath expr="//div[contains(@class, 'o_kanban_record_top')]" position="after">
                <!-- Optionally, add custom elements after the original record top section -->
                <div class="o_kanban_record_extra_info">
                    <!-- Example custom content -->
                </div>
            </xpath>
        </field>
    </record>

</odoo>
